#!/bin/sh

set -eu

ARCH=$(uname -m)
IMAGES="kde-home kde-studio kde-dev"
REPO=
DATE=$(date +%Y%m%d)

PKGS_1="$(grep '^[^#].' pkg/kde-home.packages)"
PKGS_2="$(grep '^[^#].' pkg/kde-studio.packages)"
PKGS_3="$(grep '^[^#].' pkg/kde-dev.packages)"

PKGS_HOME="$(echo $PKGS_1)"
PKGS_STUDIO="$(echo $PKGS_1 && echo $PKGS_2 | cut -d ":" -f 2)"
PKGS_DEV="$(echo $PKGS_1 && echo $PKGS_3 | cut -d ":" -f 2)"

help() {
    echo "${0#/*}: [-a arch] [-b kde-home|kde-studio|kde-dev] [-r repo]" >&2
}

while getopts "a:b:hr:" opt; do
case $opt in
    a) ARCH="$OPTARG";;
    b) IMAGES="$OPTARG";;
    h) help; exit 0;;
    r) REPO="-r $OPTARG $REPO";;
    *) help; exit 1;;
esac
done
shift $((OPTIND - 1))

build_variant() {
    variant="$1"
    IMG=langitketujuh-${variant}-${ARCH}-${DATE}.iso
    SERVICES="dbus backlight bluetoothd bluez-alsa cupsd colord earlyoom ntpd ufw uuidd zramen"

    case $variant in
        kde-home)
            PKGS="$PKGS_HOME"
            SERVICES="$SERVICES NetworkManager sddm"
        ;;
        kde-studio)
            PKGS="$PKGS_STUDIO"
            SERVICES="$SERVICES NetworkManager sddm"
        ;;
        kde-dev)
            PKGS="$PKGS_DEV"
            SERVICES="$SERVICES NetworkManager sddm"
        ;;
        *)
            >&2 echo "Unknown variant $variant"
            exit 1
        ;;
    esac

    ./mklive.sh -a "$ARCH" -o "$IMG" -p "$PKGS" -S "$SERVICES" ${REPO} "$@"
}

if [ ! -x mklive.sh ]; then
    echo mklive.sh not found >&2
    exit 1
fi

for image in $IMAGES; do
    build_variant "$image"
done
